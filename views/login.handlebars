<div class="container">
  <header>
    <h1 class="app-title">My Application</h1>
  </header>

  <main>
    <div class="card">
      <div class="card-header">
        <h2>Login</h2>
      </div>

      <div class="card-body">
        <form id="login-form" onsubmit="loginFormHandler(event)">
          <div class="form-group">
            <label
              for="username-input-login"
              class="form-label"
            >Username</label>
            <input type="text" id="username-input-login" class="form-input" />
          </div>

          <div class="form-group">
            <label
              for="password-input-login"
              class="form-label"
            >Password</label>
            <input
              type="password"
              id="password-input-login"
              class="form-input"
            />
          </div>

          <button type="submit" class="btn">Login</button>
        </form>
      </div>
    </div>
  </main>

</div>
<script src="/js/login.js"></script>