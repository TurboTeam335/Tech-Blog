<body>
    <header>
        <h1 class="app-title">New Post</h1>
    </header>
    <main class="flex-column justify-center align-center min-100-vh">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h2>Create a New Post</h2>
                </div>
                <div class="card-body">
                    <form id="new-post-form">
                        <div>
                            <label for="post-title-input" class="form-label">Post Title:</label>
                            <input type="text" id="post-title-input" name="postTitle" class="form-input">
                        </div>
                        <div>
                            <label for="post-content-input" class="form-label">Post Content:</label>
                            <textarea id="post-content-input" name="postContent" class="form-input"></textarea>
                        </div>
                        <div>
                            <button type="submit" class="btn">Create Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/new.js"></script>
</body>